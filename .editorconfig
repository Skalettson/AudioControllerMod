# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,gradle,properties,json,toml}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{bat,cmd}]
end_of_line = crlf

